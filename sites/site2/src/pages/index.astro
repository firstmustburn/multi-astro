---
import Layout from '../layouts/Layout.astro';

// this example leverages the ./card export in multi-astro-common/package.json
// for this to work, you have to set `compileOptions.moduleResolution` to something like `nodenext`
// in tsconfig.json
import  Card  from 'multi-astro-common/card';  
//import by name from index.ts
import { OtherCard } from 'multi-astro-common';

---

<Layout title="multi-astro-demo">
	<main>
		<h1>
			This is a page from a second site.
		</h1>
		<Card message="Hello world!" />
		<OtherCard message="Hello cruel world!" />
	</main>
</Layout>